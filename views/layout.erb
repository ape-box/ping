<html lang="en">
    <head>
        <title>Ping</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
        <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

        <link rel="stylesheet" href="/style.css" type="text/css">
    </head>
    <body role="document">
        <div class="container" role="main">

            <div class="jumbotron">
                <h2><%= user.nil? ? "Welcome Guest" : "Logged as " + user.login %></h2>
                <p>Ping now or see a summary (Pong)</p>
            </div>

            <% if user.nil? %>
                <div class="page-header">
                    <h3>Login</h3>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <form  class="form form-horizontal" action="/" method="post">
                            <div class="form-group">
                                <label for="email">UID:</label>
                                <input type="text" name="email" placeholder="Name Or Email" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="secret">Secret:</label>
                                <input type="text" name="secret" placeholder="Some kind of password" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="login" class="btn btn-default">
                            </div>
                        </form>
                    </div>
                </div>
            <% else %>

                <%= yield %>

            <% end %>

        </div>
    </body>
</html>
